{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "c++",
            "command": "clang++",
            "args": [
             	"${file}",
                "-std=c++11",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-g"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
            },
           "group": {
           		"kind": "build",
                "isDefault": true
            }
        }
    ]
}

